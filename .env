# VisionPlay Board Game Configuration

# Display settings (fix Wayland warning)
QT_QPA_PLATFORM=xcb

# Camera settings
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480

# Display window settings (fixed size)
WINDOW_WIDTH=1920
WINDOW_HEIGHT=1080

# Game settings
HUMAN_DETECTION_TIMEOUT=3.0
GAME_TILE_WIDTH=200
GAME_TILE_HEIGHT=300
GAME_TILE_SPACING=50

# Menu settings
MENU_BLUR_KERNEL=40

# Display settings
FULLSCREEN_MODE=true
WINDOW_TITLE=VisionPlay Board

# MediaPipe settings
POSE_CONFIDENCE_THRESHOLD=0.5
POSE_TRACKING_CONFIDENCE=0.5
POSE_PRESENCE_CONFIDENCE=0.5
MAX_PEOPLE_IN_FRAME=3
ENABLE_POSE_DETECTION=true

# Detailed pose visualization control
SHOW_BODY_LANDMARKS=true
SHOW_FACE_LANDMARKS=true
SHOW_HAND_LANDMARKS=true
SHOW_POSE_CONNECTIONS=true
SHOW_FACE_CONNECTIONS=true
SHOW_HAND_CONNECTIONS=true
LANDMARK_VISIBILITY_THRESHOLD=0.2
LANDMARK_CIRCLE_RADIUS=1
LANDMARK_THICKNESS=2



# Performance settings
SHOW_FPS=true
SHOW_STATISTICS_ON_S_KEY=true
ENABLE_POSE_DETECTION=true

# Camera optimization settings
USE_MJPEG_CODEC=true
CAMERA_BUFFER_SIZE=1
CAMERA_FPS=30

# Colors (BGR format for OpenCV) - Blue palette
COLOR_SUCCESS=(0, 255, 0)
COLOR_FAILURE=(0, 0, 255)
COLOR_NEUTRAL=(255, 255, 255)
COLOR_BLACK=(0, 0, 0)

# Blue palette colors
COLOR_BLUE_DARK=(139, 69, 19)      # Dark blue
COLOR_BLUE_MEDIUM=(255, 140, 0)    # Medium blue  
COLOR_BLUE_LIGHT=(255, 191, 0)     # Light blue
COLOR_BLUE_ACCENT=(255, 215, 0)    # Accent blue

# Performance optimization settings
POSE_DETECTION_SKIP_FRAMES=2        # Process every N frames (1 = every frame, 2 = every 2nd frame)
POSE_RESULT_CACHE_TIME=0.12          # How long to cache pose results (seconds)
FRAME_QUEUE_SIZE=2                  # Size of frame queue for pose detection
RESULT_QUEUE_SIZE=1                 # Size of result queue (keep small for low latency)

# Adaptive performance settings
ENABLE_ADAPTIVE_PERFORMANCE=true   # Enable adaptive performance based on movement speed
MIN_SKIP_FRAMES=1                   # Minimum frames to skip (fastest movement)
MAX_SKIP_FRAMES=3                   # Maximum frames to skip (slowest movement)
MIN_CACHE_TIME=0.1                 # Minimum cache time (fast movement)
MAX_CACHE_TIME=0.2                  # Maximum cache time (slow movement)
MOVEMENT_THRESHOLD=50.0             # Movement speed threshold (pixels per frame)
ADAPTATION_SMOOTHING=0.2           # Smoothing factor for adaptation (0.0-1.0)
